{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Computer edit</h1>

    {{ form_start(edit_form, { 'attr': { 'novalidate': 'novalidate'}}) }}

    <div class="form-group">
        {{ form_label(edit_form.name) }}
        {{ form_widget(edit_form.name) }}
        {{ form_errors(edit_form.name) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.ip) }}
        {{ form_widget(edit_form.ip) }}
        {{ form_errors(edit_form.ip) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.person) }}
        {{ form_widget(edit_form.person) }}
        {{ form_errors(edit_form.person) }}
    </div>

    <div class="checkbox">
        {{ form_widget(edit_form.enabled) }}
        {{ form_label(edit_form.enabled) }}
        {{ form_errors(edit_form.enabled) }}
    </div>

    <ul class="record_actions">
        <li>
            {{ form_widget(edit_form.submit) }}
            <a class="btn btn-primary" href="{{ path('computer') }}">
                Back to the list
            </a>
            {% if delete_form is defined %}
                {{ form_widget(delete_form) }}
            {% endif %}
        </li>
    </ul>

    {{ form_end(edit_form) }}
{% endblock %}
