{% extends 'ParkBundle::base.html.twig' %}

{% form_theme delete_form _self %}

{%- block submit_widget -%}
    <button class="btn btn-md btn-danger" type="submit" {{ block('button_attributes') }}>{{ label|trans({}, translation_domain) }}</button>
{%- endblock submit_widget -%}

{% block title %}
    {{ parent() }} - Computer delete
{% endblock %}

{% block body -%}

    <div class="page-header">
        <h1>Confirm delete computer {{ computer.name }} ?</h1>
    </div>

	{{ form_start(delete_form) }}
	    <a class="btn btn-md btn-primary" href="{{ path('computer') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to list</a>
	    {{ form_widget(delete_form.submit) }}
	{{ form_end(delete_form) }}

{% endblock %}
