{% extends 'ParkBundle::base.html.twig' %}

{% block title %}
    {{ parent() }} - Computer list
{% endblock %}

{% block body -%}

    <div class="page-header">
        <h1>Computer list</h1>
    </div>

    <a class="btn btn-sm btn-success" href="{{ path('computer_new') }}"><span class="glyphicon glyphicon-plus"></span> New computer</a>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">

                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Ip</th>
                        <th>Person</th>
                        <th>Enabled</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                {% for computer in computers %}
                    <tr>
                        <td><a href="{{ path('computer_show', { 'id': computer.id }) }}">{{ computer.id }}</a></td>
                        <td>{{ computer.name }}</td>
                        <td>{{ computer.ip }}</td>
                        <td>{{ computer.person }}</td>
                        <td>
                            {% if computer.enabled %}
                                <span class="glyphicon glyphicon-ok color-green pull-left" aria-hidden="true"></span>
                            {% else %}
                                <span class="glyphicon glyphicon-remove color-red" aria-hidden="true"></span>
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-xs btn-primary" href="{{ path('computer_show', { 'id': computer.id }) }}"><span class="glyphicon glyphicon-eye-open"></span> Show</a>
                            <a class="btn btn-xs btn-warning" href="{{ path('computer_edit', { 'id': computer.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
                            <a class="btn btn-xs btn-danger" href="{{ path('computer_delete', { 'id': computer.id }) }}"><span class="glyphicon glyphicon-remove"></span> Delete</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No computer found</td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
    </div>

{% endblock %}
