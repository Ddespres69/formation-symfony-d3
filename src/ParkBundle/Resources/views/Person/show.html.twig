{% extends 'ParkBundle::base.html.twig' %}

{% block title %}
    {{ parent() }} - Person show
{% endblock %}

{% block body -%}

    <div class="page-header">
        <h1>{{ entity }}</h1>
    </div>

    <div class="row">
        <div class="col-md-12">

            <div class="row">
                <div class="col-md-4">

                    <table class="table table-noborder">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ entity.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ entity.name }}</td>
                            </tr>
                            <tr>
                                <th>Firstname</th>
                                <td>{{ entity.firstname }}</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>

            <hr>

            <h3>List computers enabled</h3>

            <div class="row">
                <div class="col-md-8">

                    <table class="table table-striped">

                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Ip</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                        {% for computer in entity.computers %}
                            <tr>
                                <td><a href="{{ path('computer_show', { 'id': computer.id }) }}">{{ computer.id }}</a></td>
                                <td>{{ computer.name }}</td>
                                <td>{{ computer.ip }}</td>
                                <td>
                                    <a class="btn btn-xs btn-primary" href="{{ path('computer_show', { 'id': computer.id }) }}"><span class="glyphicon glyphicon-eye-open"></span> Show</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">No computer found</td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>

                </div>
            </div>


            <hr>

            <a class="btn btn-sm btn-primary" href="{{ path('person') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to list</a>

        </div>
    </div>

{% endblock %}
